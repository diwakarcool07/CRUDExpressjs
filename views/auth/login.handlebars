<div class="container col-md-4 offset-4 card mt-4">
    <div class="card-body">
        <h1 class="display-5 text-center text-uppercase border-bottom">Login</h1>
    <form action="/user/login" method="POST">
  <div class="form-group">
    <label for="username">Email</label>
    <input type="username" class="form-control"  name="email" required>
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" class="form-control"  required name="password">
  </div>
  <button type="submit" class="btn btn-primary btn-block">Login</button>
  <div>
  <span>Don't Have Account Please!</span><a href="/user/register">Register</a>
  </div>
</form>
</div>
</div>